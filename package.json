{
  "name": "gzweb",
  "version": "1.3.0",
  "description": "WebGL client for Gazebo",
  "repository": {
    "type": "mercurial",
    "url": "https://bitbucket.org/osrf/gzweb"
  },
  "config" : { "port" : "8080", "deploy_op": "" },
  "scripts": {
    "test": "./node_modules/karma/bin/karma start --singleRun",
    "update": "cd gz3d/utils && grunt build && cd ../../build && cmake ..",
    "start": "if [ $npm_config_port ]; then port=$npm_config_port; else port=8080; fi; ./node_modules/.bin/http-server -p $port http/client & cd gzbridge && ./ws_server.js",
    "deploy": "if [ $npm_config_deploy_op ]; then ./deploy.sh -$npm_config_deploy_op; else ./deploy.sh; fi;",
    "docs": "cd gz3d/utils && grunt doc"
  },
  "dependencies": {
    "websocket": "",
    "http-server": "",
    "node-gyp": ""
  },
  "devDependencies": {
    "grunt": "~0.4.1",
    "grunt-contrib-concat": "~0.1.3",
    "grunt-contrib-jshint": "~0.1.1",
    "grunt-contrib-watch": "~0.3.1",
    "grunt-contrib-uglify": "~0.2.0",
    "grunt-contrib-clean": "~0.4.0",
    "grunt-jsdoc": "~0.3.0",    
    "istanbul": "^0.4.5",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0"
  }
}
