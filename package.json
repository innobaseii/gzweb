{
  "name": "gzweb",
  "version": "1.3.0",
  "description": "WebGL client for Gazebo",
  "repository": {
    "type": "mercurial",
    "url": "https://bitbucket.org/osrf/gzweb"
  },
  "config" : { "port" : "8080", "deploy_op": "" },
  "scripts": {
    "test": "./node_modules/karma/bin/karma start --singleRun",
    "update": "cd gz3d/utils && grunt build && cd ../../build && cmake ..",
    "start": "./node_modules/.bin/http-server -p $npm_package_config_port http/client & cd gzbridge && ./ws_server.js",
    "deploy": "if [ $npm_config_deploy_op ]; then ./deploy.sh -$npm_config_deploy_op; else ./deploy.sh; fi;"
  },
  "dependencies": {
    "websocket": "",
    "http-server": "",
    "node-gyp": ""
  },
  "devDependencies": {
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.0"
  }
}
